{
  "manifest_version": 3,
  "name": "Credit Card Offers Extractor",
  "version": "2.0.0",
  "description": "Extract offers from American Express and Chase credit card offers pages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://global.americanexpress.com/*",
    "https://www.americanexpress.com/*",
    "https://secure.chase.com/*",
    "https://capitaloneoffers.com/*",
    "https://www.discover.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://global.americanexpress.com/offers/*",
        "https://www.americanexpress.com/*/offers/*",
        "https://secure.chase.com/web/auth/dashboard*",
        "https://capitaloneoffers.com/feed*",
        "https://www.discover.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

